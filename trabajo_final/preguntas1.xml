<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE test SYSTEM "preguntas.dtd">
<test>
  <question id="1">
    <wording>¿Qué significa XML?</wording>
    <choices>
      <choice correct="no">eXtra Modern Link</choice>
      <choice correct="yes">eXtensible Markup Language</choice>
      <choice correct="no">Example Markup Language</choice>
      <choice correct="no">Xylophone Music List</choice>
    </choices>
  </question>
  
  <question id="2">
    <wording>¿Qué extensión tienen normalmente los archivos DTD?</wording>
    <choices>
      <choice correct="yes">.dtd</choice>
      <choice correct="no">.xml</choice>
      <choice correct="no">.dtx</choice>
      <choice correct="no">.dml</choice>
    </choices>
  </question>
  
  <question id="3">
    <wording>¿Cuál es el elemento raíz en este XML? &lt;libros&gt;&lt;libro&gt;...&lt;/libro&gt;&lt;/libros&gt;</wording>
    <choices>
      <choice correct="no">libro</choice>
      <choice correct="yes">libros</choice>
      <choice correct="no">No tiene elemento raíz</choice>
      <choice correct="no">El que esté primero</choice>
    </choices>
  </question>
  
  <question id="4">
    <wording>¿Qué símbolo se usa para abrir una etiqueta XML?</wording>
    <choices>
      <choice correct="no">{</choice>
      <choice correct="no">[</choice>
      <choice correct="yes">&lt;</choice>
      <choice correct="no">(</choice>
    </choices>
  </question>
  
  <question id="5">
    <wording>¿Cómo se declara la versión XML al inicio de un documento?</wording>
    <choices>
      <choice correct="no">&lt;xml version="1.0"&gt;</choice>
      <choice correct="yes">&lt;?xml version="1.0"?&gt;</choice>
      <choice correct="no">&lt;version xml="1.0"&gt;</choice>
      <choice correct="no">&lt;doc xml="1.0"&gt;</choice>
    </choices>
  </question>
  
  <question id="6">
    <wording>¿Qué significa DTD?</wording>
    <choices>
      <choice correct="no">Document Type Design</choice>
      <choice correct="no">Data Type Definition</choice>
      <choice correct="yes">Document Type Definition</choice>
      <choice correct="no">Dynamic Type Document</choice>
    </choices>
  </question>
  
  <question id="7">
    <wording>¿Cuál es la principal función de un DTD?</wording>
    <choices>
      <choice correct="no">Dar estilo al documento XML</choice>
      <choice correct="yes">Definir la estructura y elementos válidos</choice>
      <choice correct="no">Convertir XML a HTML</choice>
      <choice correct="no">Comprimir el documento XML</choice>
    </choices>
  </question>
  
  <question id="8">
    <wording>¿Qué elemento XML es correcto?</wording>
    <choices>
      <choice correct="no">&lt;nombre apellido="García"&gt;Juan&lt;apellido&gt;</choice>
      <choice correct="no">&lt;nombre&gt;Juan"García"&lt;/nombre&gt;</choice>
      <choice correct="yes">&lt;nombre&gt;Juan&lt;/nombre&gt;</choice>
      <choice correct="no">&lt;nombre&gt;Juan&lt;nombre&gt;</choice>
    </choices>
  </question>
  
  <question id="9">
    <wording>En XML, ¿los nombres de elementos distinguen mayúsculas y minúsculas?</wording>
    <choices>
      <choice correct="yes">Sí</choice>
      <choice correct="no">No</choice>
      <choice correct="no">Solo en algunos casos</choice>
      <choice correct="no">Depende del editor</choice>
    </choices>
  </question>
  
  <question id="10">
    <wording>¿Qué declaración DOCTYPE es correcta para referenciar un DTD externo?</wording>
    <choices>
      <choice correct="no">&lt;!DOCTYPE SYSTEM "archivo.dtd"&gt;</choice>
      <choice correct="yes">&lt;!DOCTYPE root SYSTEM "archivo.dtd"&gt;</choice>
      <choice correct="no">&lt;DOCTYPE SYSTEM "archivo.dtd"&gt;</choice>
      <choice correct="no">&lt;!DTD root SYSTEM "archivo.dtd"&gt;</choice>
    </choices>
  </question>
  
  <question id="11">
    <wording>¿Qué símbolo se usa para comentarios en XML?</wording>
    <choices>
      <choice correct="no">//</choice>
      <choice correct="no">-- --</choice>
      <choice correct="yes">&lt;!-- --&gt;</choice>
      <choice correct="no">/* */</choice>
    </choices>
  </question>
  
  <question id="12">
    <wording>¿Qué atributo declara que un elemento debe estar vacío en DTD?</wording>
    <choices>
      <choice correct="no">#REQUIRED</choice>
      <choice correct="no">#OPTIONAL</choice>
      <choice correct="yes">EMPTY</choice>
      <choice correct="no">#NULL</choice>
    </choices>
  </question>
  
  <question id="13">
    <wording>¿Cómo se declara un elemento con contenido de texto en DTD?</wording>
    <choices>
      <choice correct="no">&lt;!ELEMENT nombre EMPTY&gt;</choice>
      <choice correct="yes">&lt;!ELEMENT nombre (#PCDATA)&gt;</choice>
      <choice correct="no">&lt;!ELEMENT nombre TEXT&gt;</choice>
      <choice correct="no">&lt;!ELEMENT nombre STRING&gt;</choice>
    </choices>
  </question>
  
  <question id="14">
    <wording>¿Qué significa PCDATA en DTD?</wording>
    <choices>
      <choice correct="no">Preferred Character Data</choice>
      <choice correct="yes">Parsed Character Data</choice>
      <choice correct="no">Processed Character Data</choice>
      <choice correct="no">Partial Character Data</choice>
    </choices>
  </question>
  
  <question id="15">
    <wording>¿Cuál es la diferencia entre XML y HTML?</wording>
    <choices>
      <choice correct="no">XML es para presentación, HTML para datos</choice>
      <choice correct="yes">XML es para datos, HTML para presentación</choice>
      <choice correct="no">No hay diferencia</choice>
      <choice correct="no">XML es más antiguo que HTML</choice>
    </choices>
  </question>
  
  <question id="16">
    <wording>¿Qué elemento XML es válido?</wording>
    <choices>
      <choice correct="no">&lt;1nombre&gt;Texto&lt;/1nombre&gt;</choice>
      <choice correct="no">&lt;nombre apellido="García"&gt;&lt;/apellido&gt;</choice>
      <choice correct="yes">&lt;nombre&gt;Texto&lt;/nombre&gt;</choice>
      <choice correct="no">&lt;nombre&gt;&lt;nombre&gt;Texto&lt;/nombre&gt;</choice>
    </choices>
  </question>
  
  <question id="17">
    <wording>¿Qué declaración define que un atributo es obligatorio en DTD?</wording>
    <choices>
      <choice correct="yes">#REQUIRED</choice>
      <choice correct="no">#MANDATORY</choice>
      <choice correct="no">#NEEDED</choice>
      <choice correct="no">#IMPORTANT</choice>
    </choices>
  </question>
  
  <question id="18">
    <wording>¿Para qué sirve el carácter ? en una declaración DTD?</wording>
    <choices>
      <choice correct="no">Para indicar uno o más elementos</choice>
      <choice correct="yes">Para indicar cero o un elemento</choice>
      <choice correct="no">Para hacer preguntas</choice>
      <choice correct="no">Para indicar comentarios</choice>
    </choices>
  </question>
  
  <question id="19">
    <wording>¿Qué significa que XML es extensible?</wording>
    <choices>
      <choice correct="no">Que ocupa mucho espacio</choice>
      <choice correct="no">Que puede comprimirse</choice>
      <choice correct="yes">Que puedes definir tus propias etiquetas</choice>
      <choice correct="no">Que se puede convertir a otros formatos</choice>
    </choices>
  </question>
  
  <question id="20">
    <wording>¿Qué declaración DTD indica que un elemento puede contener cualquier combinación de otros elementos?</wording>
    <choices>
      <choice correct="no">&lt;!ELEMENT elem (a|b)&gt;</choice>
      <choice correct="yes">&lt;!ELEMENT elem ANY&gt;</choice>
      <choice correct="no">&lt;!ELEMENT elem ALL&gt;</choice>
      <choice correct="no">&lt;!ELEMENT elem MIXED&gt;</choice>
    </choices>
  </question>
</test>