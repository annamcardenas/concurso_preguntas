<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE test SYSTEM "preguntas.dtd">
<test>
  <question id="1">
    <wording>What does XML mean?</wording>
    <choices>
      <choice correct="no">eXtra Modern Link</choice>
      <choice correct="yes">eXtensible Markup Language</choice>
      <choice correct="no">Example Markup Language</choice>
      <choice correct="no">Xylophone Music List</choice>
    </choices>
  </question>
  
  <question id="2">
    <wording>What extension do DTD files normally have?</wording>
    <choices>
      <choice correct="yes">.dtd</choice>
      <choice correct="no">.xml</choice>
      <choice correct="no">.dtx</choice>
      <choice correct="no">.dml</choice>
    </choices>
  </question>
  
  <question id="3">
    <wording>What is the root element in this XML? &lt;books&gt;&lt;book&gt;...&lt;/book&gt;&lt;/books&gt;</wording>
    <choices>
      <choice correct="no">book</choice>
      <choice correct="yes">books</choice>
      <choice correct="no">There is no root element</choice>
      <choice correct="no">The first one</choice>
    </choices>
  </question>
  
  <question id="4">
    <wording>What symbol is used to open an XML tag?</wording>
    <choices>
      <choice correct="no">{</choice>
      <choice correct="no">[</choice>
      <choice correct="yes">&lt;</choice>
      <choice correct="no">(</choice>
    </choices>
  </question>
  
  <question id="5">
    <wording>How is the XML version declared at the start of a document?</wording>
    <choices>
      <choice correct="no">&lt;xml version="1.0"&gt;</choice>
      <choice correct="yes">&lt;?xml version="1.0"?&gt;</choice>
      <choice correct="no">&lt;version xml="1.0"&gt;</choice>
      <choice correct="no">&lt;doc xml="1.0"&gt;</choice>
    </choices>
  </question>
  
  <question id="6">
    <wording>What does DTD stand for?</wording>
    <choices>
      <choice correct="no">Document Type Design</choice>
      <choice correct="no">Data Type Definition</choice>
      <choice correct="yes">Document Type Definition</choice>
      <choice correct="no">Dynamic Type Document</choice>
    </choices>
  </question>
  
  <question id="7">
    <wording>What is the main purpose of a DTD?</wording>
    <choices>
      <choice correct="no">To style the XML document</choice>
      <choice correct="yes">To define the valid structure and elements</choice>
      <choice correct="no">To convert XML to HTML</choice>
      <choice correct="no">To compress the XML document</choice>
    </choices>
  </question>
  
  <question id="8">
    <wording>Which XML element is correct?</wording>
    <choices>
      <choice correct="no">&lt;name lastname="García"&gt;John&lt;lastname&gt;</choice>
      <choice correct="no">&lt;name&gt;John"García"&lt;/name&gt;</choice>
      <choice correct="yes">&lt;name&gt;John&lt;/name&gt;</choice>
      <choice correct="no">&lt;name&gt;John&lt;name&gt;</choice>
    </choices>
  </question>
  
  <question id="9">
    <wording>In XML, are element names case-sensitive?</wording>
    <choices>
      <choice correct="yes">Yes</choice>
      <choice correct="no">No</choice>
      <choice correct="no">Only in some cases</choice>
      <choice correct="no">Depends on the editor</choice>
    </choices>
  </question>
  
  <question id="10">
    <wording>Which DOCTYPE declaration is correct for referencing an external DTD?</wording>
    <choices>
      <choice correct="no">&lt;!DOCTYPE SYSTEM "file.dtd"&gt;</choice>
      <choice correct="yes">&lt;!DOCTYPE root SYSTEM "file.dtd"&gt;</choice>
      <choice correct="no">&lt;DOCTYPE SYSTEM "file.dtd"&gt;</choice>
      <choice correct="no">&lt;!DTD root SYSTEM "file.dtd"&gt;</choice>
    </choices>
  </question>
  
  <question id="11">
    <wording>What symbol is used for comments in XML?</wording>
    <choices>
      <choice correct="no">//</choice>
      <choice correct="no">-- --</choice>
      <choice correct="yes">&lt;!-- --&gt;</choice>
      <choice correct="no">/* */</choice>
    </choices>
  </question>
  
  <question id="12">
    <wording>Which attribute declares that an element must be empty in DTD?</wording>
    <choices>
      <choice correct="no">#REQUIRED</choice>
      <choice correct="no">#OPTIONAL</choice>
      <choice correct="yes">EMPTY</choice>
      <choice correct="no">#NULL</choice>
    </choices>
  </question>
  
  <question id="13">
    <wording>How do you declare a text content element in DTD?</wording>
    <choices>
      <choice correct="no">&lt;!ELEMENT name EMPTY&gt;</choice>
      <choice correct="yes">&lt;!ELEMENT name (#PCDATA)&gt;</choice>
      <choice correct="no">&lt;!ELEMENT name TEXT&gt;</choice>
      <choice correct="no">&lt;!ELEMENT name STRING&gt;</choice>
    </choices>
  </question>
  
  <question id="14">
    <wording>What does PCDATA mean in DTD?</wording>
    <choices>
      <choice correct="no">Preferred Character Data</choice>
      <choice correct="yes">Parsed Character Data</choice>
      <choice correct="no">Processed Character Data</choice>
      <choice correct="no">Partial Character Data</choice>
    </choices>
  </question>
  
  <question id="15">
    <wording>What is the difference between XML and HTML?</wording>
    <choices>
      <choice correct="no">XML is for presentation, HTML is for data</choice>
      <choice correct="yes">XML is for data, HTML is for presentation</choice>
      <choice correct="no">There is no difference</choice>
      <choice correct="no">XML is older than HTML</choice>
    </choices>
  </question>
  
  <question id="16">
    <wording>Which XML element is valid?</wording>
    <choices>
      <choice correct="no">&lt;1name&gt;Text&lt;/1name&gt;</choice>
      <choice correct="no">&lt;name lastname="García"&gt;&lt;/lastname&gt;</choice>
      <choice correct="yes">&lt;name&gt;Text&lt;/name&gt;</choice>
      <choice correct="no">&lt;name&gt;&lt;name&gt;Text&lt;/name&gt;</choice>
    </choices>
  </question>
  
  <question id="17">
    <wording>Which declaration defines that an attribute is mandatory in DTD?</wording>
    <choices>
      <choice correct="yes">#REQUIRED</choice>
      <choice correct="no">#MANDATORY</choice>
      <choice correct="no">#NEEDED</choice>
      <choice correct="no">#IMPORTANT</choice>
    </choices>
  </question>
  
  <question id="18">
    <wording>What is the purpose of the ? character in a DTD declaration?</wording>
    <choices>
      <choice correct="no">To indicate one or more elements</choice>
      <choice correct="yes">To indicate zero or one element</choice>
      <choice correct="no">To ask questions</choice>
      <choice correct="no">To indicate comments</choice>
    </choices>
  </question>
  
  <question id="19">
    <wording>What does it mean that XML is extensible?</wording>
    <choices>
      <choice correct="no">That it takes up a lot of space</choice>
      <choice correct="no">That it can be compressed</choice>
      <choice correct="yes">That you can define your own tags</choice>
      <choice correct="no">That it can be converted to other formats</choice>
    </choices>
  </question>
  
  <question id="20">
    <wording>Which DTD declaration indicates that an element can contain any combination of other elements?</wording>
    <choices>
      <choice correct="no">&lt;!ELEMENT elem (a|b)&gt;</choice>
      <choice correct="yes">&lt;!ELEMENT elem ANY&gt;</choice>
      <choice correct="no">&lt;!ELEMENT elem ALL&gt;</choice>
      <choice correct="no">&lt;!ELEMENT elem MIXED&gt;</choice>
    </choices>
  </question>
</test>